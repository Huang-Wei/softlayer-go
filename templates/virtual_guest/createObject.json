{
  "parameters":[
    {
      "hostname": "{{.HostName}}",
      "domain": "{{.Domain}}",
      "datacenter": { 
        "name": "{{.Datacenter}}" 
      },
      "startCpus": {{.Cpus}},
      "maxMemory": {{.Memory}},
      "hourlyBillingFlag": true, 
      "localDiskFlag": false,
      {{if .BaseImageId}}
      "blockDeviceTemplateGroup": { 
        "globalIdentifier": "{{.BaseImageId}}" 
      },
      {{else}}
      "blockDevices": [
        {
          "device": "0",
          "diskImage": {
            "capacity": {{.DiskCapacity}}
          }
        }
      ],
      "operatingSystemReferenceCode": "{{.BaseOsCode}}",
      {{end}}
      {{if .ProvisioningSshKeyId}}
      "sshKeys": [
        {
          "id": {{.ProvisioningSshKeyId}}
        }
      ],
      {{end}}
      "networkComponents": [
        {
          "maxSpeed": {{.NetworkSpeed}}
        }
      ]
    }
  ]
}