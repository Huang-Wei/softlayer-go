#!/bin/bash

(
  set -e

  base=$( cd "$( dirname "$( dirname "$0" )")" && pwd )
  base_gopath=$( cd $base/../../../.. && pwd )
 
  export GOPATH=$base:$base/Godeps/_workspace:$base_gopath GOBIN=$base_gopath/gobin
  export PATH=$PATH:$GOBIN

  function printStatus {
      if [ $? -eq 0 ]; then
          echo -e "\nSWEET SUITE SUCCESS"
      else
          echo -e "\nSUITE FAILURE"
      fi
  }

  trap printStatus EXIT
  
  echo -e "\n Cleaning build artifacts..."
  go clean

  echo -e "\n Formatting packages..."
  go fmt ./...

  echo -e "\n Unit Testing packages:"
  go test ./softlayer-go/client/... ./softlayer-go/data_types/... ./softlayer-go/main/... ./softlayer-go/services/... ./softlayer-go/softlayer/...

  echo $GOPATH

  go get golang.org/x/tools/cmd/vet
  # go get code.google.com/p/go.tools/cmd/vet

  echo $GOPATH

  echo -e "\n Vetting packages for potential issues..."
  go tool vet softlayer-go/services softlayer-go/data_types softlayer-go/main softlayer-go/client softlayer-go/common softlayer-go/test_helpers softlayer-go/integration
)
